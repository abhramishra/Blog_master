<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "Accout Setting",edit_user_registration_path %> | <%= link_to "Log out",destroy_user_session_path,method: :delete %>            
      <br><b>Welcome <%= current_user.username %></b>

      
    <% else %>  
      <%= link_to "Register",new_user_registration_path %> | 
      <%= link_to "Sing in",new_user_session_path %> |
    <% end %>

    <hr>
    <%= link_to "Category",categories_path %> | <%= link_to "Article",articles_path %>
    <br>
    <%= notice %>
    <%= yield %>
    <%= alert %>
  </body>
</html>
